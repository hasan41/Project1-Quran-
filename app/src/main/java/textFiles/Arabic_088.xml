<?xml version="1.0" encoding="utf-8"?><sura id="88" name="الغاشية">  <aya id="1" text="هَلْ أَتَاكَ حَدِيثُ الْغَاشِيَةِ" />  <aya id="2" text="وُجُوهٌ يَوْمَئِذٍ خَاشِعَةٌ" />  <aya id="3" text="عَامِلَةٌ نَّاصِبَةٌ" />  <aya id="4" text="تَصْلَى نَارًا حَامِيَةً" />  <aya id="5" text="تُسْقَى مِنْ عَيْنٍ آنِيَةٍ" />  <aya id="6" text="لَّيْسَ لَهُمْ طَعَامٌ إِلَّا مِن ضَرِيعٍ" />  <aya id="7" text="لَا يُسْمِنُ وَلَا يُغْنِي مِن جُوعٍ" />  <aya id="8" text="وُجُوهٌ يَوْمَئِذٍ نَّاعِمَةٌ" />  <aya id="9" text="لِسَعْيِهَا رَاضِيَةٌ" />  <aya id="10" text="فِي جَنَّةٍ عَالِيَةٍ" />  <aya id="11" text="لَّا تَسْمَعُ فِيهَا لَاغِيَةً" />  <aya id="12" text="فِيهَا عَيْنٌ جَارِيَةٌ" />  <aya id="13" text="فِيهَا سُرُرٌ مَّرْفُوعَةٌ" />  <aya id="14" text="وَأَكْوَابٌ مَّوْضُوعَةٌ" />  <aya id="15" text="وَنَمَارِقُ مَصْفُوفَةٌ" />  <aya id="16" text="وَزَرَابِيُّ مَبْثُوثَةٌ" />  <aya id="17" text="أَفَلَا يَنظُرُونَ إِلَى الْإِبِلِ كَيْفَ خُلِقَتْ" />  <aya id="18" text="وَإِلَى السَّمَاء كَيْفَ رُفِعَتْ" />  <aya id="19" text="وَإِلَى الْجِبَالِ كَيْفَ نُصِبَتْ" />  <aya id="20" text="وَإِلَى الْأَرْضِ كَيْفَ سُطِحَتْ" />  <aya id="21" text="فَذَكِّرْ إِنَّمَا أَنتَ مُذَكِّرٌ" />  <aya id="22" text="لَّسْتَ عَلَيْهِم بِمُصَيْطِرٍ" />  <aya id="23" text="إِلَّا مَن تَوَلَّى وَكَفَرَ" />  <aya id="24" text="فَيُعَذِّبُهُ اللَّهُ الْعَذَابَ الْأَكْبَرَ" />  <aya id="25" text="إِنَّ إِلَيْنَا إِيَابَهُمْ" />  <aya id="26" text="ثُمَّ إِنَّ عَلَيْنَا حِسَابَهُمْ" /></sura>
