<?xml version="1.0" encoding="utf-8"?><sura id="82" name="الإنفطار">  <aya id="1" text="إِذَا السَّمَاء انفَطَرَتْ" />  <aya id="2" text="وَإِذَا الْكَوَاكِبُ انتَثَرَتْ" />  <aya id="3" text="وَإِذَا الْبِحَارُ فُجِّرَتْ" />  <aya id="4" text="وَإِذَا الْقُبُورُ بُعْثِرَتْ" />  <aya id="5" text="عَلِمَتْ نَفْسٌ مَّا قَدَّمَتْ وَأَخَّرَتْ" />  <aya id="6" text="يَا أَيُّهَا الْإِنسَانُ مَا غَرَّكَ بِرَبِّكَ الْكَرِيمِ" />  <aya id="7" text="الَّذِي خَلَقَكَ فَسَوَّاكَ فَعَدَلَكَ" />  <aya id="8" text="فِي أَيِّ صُورَةٍ مَّا شَاء رَكَّبَكَ" />  <aya id="9" text="كَلَّا بَلْ تُكَذِّبُونَ بِالدِّينِ" />  <aya id="10" text="وَإِنَّ عَلَيْكُمْ لَحَافِظِينَ" />  <aya id="11" text="كِرَامًا كَاتِبِينَ" />  <aya id="12" text="يَعْلَمُونَ مَا تَفْعَلُونَ" />  <aya id="13" text="إِنَّ الْأَبْرَارَ لَفِي نَعِيمٍ" />  <aya id="14" text="وَإِنَّ الْفُجَّارَ لَفِي جَحِيمٍ" />  <aya id="15" text="يَصْلَوْنَهَا يَوْمَ الدِّينِ" />  <aya id="16" text="وَمَا هُمْ عَنْهَا بِغَائِبِينَ" />  <aya id="17" text="وَمَا أَدْرَاكَ مَا يَوْمُ الدِّينِ" />  <aya id="18" text="ثُمَّ مَا أَدْرَاكَ مَا يَوْمُ الدِّينِ" />  <aya id="19" text="يَوْمَ لَا تَمْلِكُ نَفْسٌ لِّنَفْسٍ شَيْئًا وَالْأَمْرُ يَوْمَئِذٍ لِلَّهِ" /></sura>
